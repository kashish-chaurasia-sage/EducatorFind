<script>
$(document).ready(function () { 


  
  $("#review_form").submit(function (e) { 
	  e.preventDefault();
    var senddata = $(this).serializeArray();
    var sendto = $(this).attr("action");

    $.ajax({
        url: sendto,
        type: 'POST',
        data: senddata,
        success: function () {
          $('#reviewResponseId').html(data);
		  $("#review_form").trigger("reset");
		 
        },
        error: function (error) {
           alert('error');
        }
    });
  });
});
</script>
